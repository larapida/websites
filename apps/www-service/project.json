{
  "name": "@larapida-websites/www-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/www-service/src",
  "projectType": "application",
  "tags": ["type:app", "scope:www", "platform:server"],
  "implicitDependencies": ["@larapida-websites/www"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "platform": "node",
        "outputPath": "{workspaceRoot}/dist/apps/www-service",
        "format": ["cjs"],
        "bundle": false,
        "main": "apps/www-service/src/main.ts",
        "tsConfig": "apps/www-service/tsconfig.app.json",
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "defaultConfiguration": "development",
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "@larapida-websites/www-service:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "@larapida-websites/www-service:build:development"
        },
        "production": {
          "buildTarget": "@larapida-websites/www-service:build:production"
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false
      },
      "defaultConfiguration": "development",
      "configurations": {
        "development": {
          "commands": [
            "dotenvx run -fk libs/www/env/.env.keys -f libs/www/env/.env -- pnpm exec nx run-many -t build --projects=tag:scope:www --exclude=tag:type:lib --configuration=development",
            "nx run www-env:inject:development"
          ]
        },
        "production": {
          "commands": [
            "dotenvx run -fk libs/www/env/.env.keys -f libs/www/env/.env.production -- pnpm exec nx run-many -t build --projects=tag:scope:www --exclude=tag:type:lib --configuration=production",
            "nx run www-env:inject:production"
          ]
        }
      }
    }
  }
}
