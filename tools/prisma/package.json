{
  "name": "@larapida-websites/prisma",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "@swc/helpers": "~0.5.11",
    "bcryptjs": "^3.0.2"
  },
  "devDependencies": {},
  "nx": {
    "sourceRoot": "tools/prisma/src",
    "targets": {
      "build": {
        "executor": "@nx/js:swc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "tools/prisma/dist",
          "main": "tools/prisma/src/index.ts",
          "tsConfig": "tools/prisma/tsconfig.lib.json",
          "skipTypeCheck": true,
          "stripLeadingPaths": true
        }
      },
      "generate": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "tools/prisma"
        },
        "defaultConfiguration": "client",
        "configurations": {
          "client": {
            "command": "dotenvx run -- pnpm prisma generate --generator client"
          },
          "cli": {
            "command": "dotenvx run -- pnpm prisma generate --generator clientForCli"
          }
        }
      },
      "migrate": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "tools/old-prisma"
        },
        "defaultConfiguration": "development",
        "configurations": {
          "development": {
            "command": "dotenvx run -f .env -- pnpm exec prisma migrate dev --generator client"
          },
          "production": {
            "command": "dotenvx run -f .env -- pnpm exec prisma migrate deploy --generator client"
          }
        },
        "dependsOn": [
          "generate:client"
        ]
      }
    }
  }
}
