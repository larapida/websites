{
  "name": "@larapida-websites/prisma-tools",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./seed": {
      "types": "./src/seed/index.ts",
      "import": "./src/seed/index.ts",
      "default": "./src/seed/index.ts"
    }
  },
  "dependencies": {},
  "devDependencies": {},
  "nx": {
    "projectType": "library",
    "tags": [
      "type:tool"
    ],
    "targets": {
      "generate": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "tools/prisma"
        },
        "defaultConfiguration": "development",
        "configurations": {
          "development": {
            "commands": [
              "dotenvx run -f .env -- pnpm prisma generate",
              "pnpm dlx rimraf ../../apps/api-service/src/prisma/client",
              "cp -r ./src/prisma/client ../../apps/api-service/src/prisma/client",
              "pnpm dlx rimraf ../cli/src/prisma/client",
              "cp -r ./src/prisma/client ../cli/src/prisma/client"
            ],
            "parallel": false
          },
          "production": {
            "commands": [
              "dotenvx run -f .env -- pnpm prisma generate",
              "pnpm dlx rimraf ../../apps/api-service/src/prisma/client",
              "cp -r ./src/prisma/client ../../apps/api-service/src/prisma/client",
              "pnpm dlx rimraf ../cli/src/prisma/client",
              "cp -r ./src/prisma/client ../cli/src/prisma/client"
            ],
            "parallel": false
          }
        }
      },
      "migrate": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "tools/prisma"
        },
        "defaultConfiguration": "development",
        "configurations": {
          "development": {
            "command": "dotenvx run -f .env -- pnpm exec prisma migrate dev"
          },
          "production": {
            "command": "dotenvx run -f .env -- pnpm exec prisma migrate deploy"
          }
        }
      }
    }
  }
}
